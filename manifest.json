{
    "manifest_version": 3,
    "name": "Tomato Timer",
    "version": "1.0.0",
    "description": "A Timer Extension",
    "icons":{
        "16":"tomato.png",
        "48":"tomato.png",
        "128":"tomato.png"
    },
    "action":{
        "default_icon":{
            "16":"tomato.png",
            "24":"tomato.png",
            "32":"tomato.png"
        },
        "default_title":"Tomoto Extension Action",
        "default_popup":"popup.html"
    },
    "permissions": ["storage","alarms", "notifications"],
    "background":{
        "service_worker":"background.js"
    },
    "options_page":"options/options.html"
}